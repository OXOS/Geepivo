<?xml version="1.0" encoding="UTF-8" ?>
<ApplicationManifest xmlns="http://schemas.google.com/ApplicationManifest/2009">

  <Support>
    <Link rel="support" href="<%= url_for('/support') %>" />
  </Support>

  <Name>Gee Pivo (<%= @app_suffix %>)</Name>
  <Description>Pivotal Plus integration</Description>

  <Extension id="realm" type="openIdRealm">
    <Url><%= url_for('') %></Url>
  </Extension>

  <!-- Contextual gadget -->

  <Extension id="navLink" type="link">
    <Name>PivoPlus</Name>
    <Url><%= url_for('/login?openid_identifier=${DOMAIN_NAME}') %></Url> 
    <Scope ref="GmailScope"/>
  </Extension>

  <Scope id="GmailScope">
    <Url>https://mail.google.com/</Url>
    <Reason>This app monitors for emails with specified labels, to turn them into stories.</Reason>
  </Scope>

  <!-- Contextual gadget -->

  <Extension id="GeePivoExtractor" type="contextExtractor">
    <Name>GeePivo</Name>
    <Url>google.com:HelloWorld</Url>
    <Triggers ref="GeePivoGadget"/>
    <Scope ref="emailSubject"/>
    <Scope ref="emailBody"/>
    <Container name="mail"/>
  </Extension>
  
  <Extension id="GeePivoGadget" type="gadget">
    <Name>GeePivo Gmail contextual gadget</Name>
    <Url><%= @gadget_specs_url %></Url>
    <Container name="mail"/>
  </Extension>
  
  <Scope id="emailSubject">
    <Url>tag:google.com,2010:auth/contextual/extractor/SUBJECT</Url>
    <Reason>GeePivo uses Email subjects as Story names.</Reason>
  </Scope>
  
  <Scope id="emailBody">
    <Url>tag:google.com,2010:auth/contextual/extractor/BODY</Url>
    <Reason>This application searches the message body of each email
    for the text "Hello World."</Reason>
  </Scope>

</ApplicationManifest>


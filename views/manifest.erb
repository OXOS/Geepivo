<?xml version="1.0" encoding="UTF-8" ?>
<ApplicationManifest xmlns="http://schemas.google.com/ApplicationManifest/2009">

  <Support>
    <Link rel="support" href="<%= url_for('/support') %>" />
  </Support>

  <Name>PivoPlus</Name>
  <Description>Pivotal Plus integration</Description>

<!-- EXTRACTOR -->

<Extension id="HelloWorldExtractor" type="contextExtractor">
  <Name>Hello World</Name>
  <Url>google.com:HelloWorld</Url>
  <Triggers ref="HelloWorldGadget"/>
  <Scope ref="emailSubject"/>
  <Scope ref="emailBody"/>
  <Container name="mail"/>
</Extension>

<!-- GADGET -->

<Extension id="HelloWorldGadget" type="gadget">
  <Name>PivoPlus Gmail contextual gadget</Name>
  <Url><%= url_for('/hello_world_gadget.xml') %></Url>
  <Container name="mail"/>
</Extension>

<!-- SCOPE -->

<Scope id="emailSubject">
  <Url>tag:google.com,2010:auth/contextual/extractor/SUBJECT</Url>
  <Reason>This application searches the Subject: line of each email
  for the text "Hello World."</Reason>
</Scope>

<Scope id="emailBody">
  <Url>tag:google.com,2010:auth/contextual/extractor/BODY</Url>
  <Reason>This application searches the message body of each email
  for the text "Hello World."</Reason>
</Scope>

</ApplicationManifest>


source :rubygems

group :common do
  gem "sinatra", :require => "sinatra"
  gem "ruby-openid"
  gem "ruby-openid-apps-discovery"
  gem "rack-openid"
end

group :test do
  gem "jasmine", "1.1.1", :git => "git://github.com/pivotal/jasmine-gem.git"
end

group :development do
  gem "erubis"
  gem "rb-fsevent"
  gem "ruby-debug"
  gem "growl"
  gem "rake"
  gem "guard"
  gem "guard-shell"
  gem "coffee-script"
  gem "therubyracer"
  gem "json_pure"
end

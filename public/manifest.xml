<?xml version="1.0" encoding="UTF-8" ?>
<ApplicationManifest xmlns="http://schemas.google.com/ApplicationManifest/2009">

  <Support>
    <Link rel="support" href="<%= url_for('/support') %>" />
  </Support>

  <Name>Gee Pivo (<%= @app_suffix %>)</Name>
  <Description>Pivotal Plus integration</Description>

  <Extension id="realm" type="openIdRealm">
    <Url><%= url_for('') %></Url>
  </Extension>

  <!-- Contextual gadget -->

  <Extension id="navLink" type="link">
    <Name>PivoPlus</Name>
    <Url><%= url_for('/login?openid_identifier=${DOMAIN_NAME}') %></Url> 
  </Extension>

  <!-- Contextual gadget -->

  <Extension id="GeePivoExtractor" type="contextExtractor">
    <Name>GeePivo</Name>
    <Url>google.com:SubjectExtractor</Url>
    <Param name="subject" value=".*"/>
    <Triggers ref="GeePivoGadget"/>
    <Scope ref="emailSubject"/>
    <Container name="mail"/>
  </Extension>

  <Extension id="GeepivoMessageIDExtractor" type="contextExtractor">
    <Name>GeePivo MessageId Extractor</Name>
    <Url>google.com:MessageIDExtractor</Url>
    <Param name="message_id" value=".*"/>
    <Triggers ref="GeePivoGadget"/>
    <Scope ref="emailIdScope"/>
    <Container name="mail"/>
  </Extension>

  <Extension id="GeePivoGadget" type="gadget">
    <Name>GeePivo Gmail contextual gadget</Name>
    <Url><%= @gadget_specs_url %></Url>
    <Container name="mail"/>
  </Extension>
  
  <Scope id="emailSubject">
    <Url>tag:google.com,2010:auth/contextual/extractor/SUBJECT</Url>
    <Reason>GeePivo uses Email subjects as Story names.</Reason>
  </Scope>
  
  <Scope id="emailIdScope">
    <Url>tag:google.com,2010:auth/contextual/extractor/MESSAGE_ID</Url>
    <Reason>Geepivo links to Gmail message using its message ID.</Reason>
  </Scope>

</ApplicationManifest>

